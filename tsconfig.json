{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "rootDir": ".",
    "baseUrl": "src",
    "paths": {
      "@pages/*": ["pages/*"],
      "@components/*": ["components/*"],
      "@stores/*": ["stores/*"],
      "@api/*": ["api/*"],
      "@constants/*": ["constants/*"],
      "@utils/*": ["utils/*"],
      "@styles/*": ["styles/*"]
    },
    "allowJs": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true
  },
  "include": [
    "src",
    "custom.d.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "node_modules"
  ]
}